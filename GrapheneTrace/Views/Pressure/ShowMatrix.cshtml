@{
    ViewBag.Title = "Pressure Matrix";
    int[,] matrix = ViewBag.Matrix;
}

<h2>Pressure Matrix</h2>

<h3>Matrix</h3>
<p>Peak Pressure: @ViewBag.PeakPressure</p>
<p>Contact Area %: @ViewBag.ContactAreaPercent</p>


<table class="table table-bordered">
    @for (int i = 0; i < matrix.GetLength(0); i++)
    {
        <tr>
            @for (int j = 0; j < matrix.GetLength(1); j++)
            {
                <td>@matrix[i, j]</td>
            }
        </tr>
    }
</table>